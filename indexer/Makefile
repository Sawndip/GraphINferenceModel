# compiling C++ code
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -pg -o $@ -c $<
%: %.o
	$(CXX) $(CXXFLAGS) -pg -o $@ $< $(CPPLDFLAGS)

lemur = ${HOME}/tools/lemur-4.12
lemon = ${HOME}/tools/lemon-1.2.3

LEMUR_INC = ${lemur}/include
LEMON_INC = ${lemon}/include

LEMUR_LIBPATH = ${lemur}/lib
LEMUR_LIB = lemur

CXX = g++
CFLAGS = -DPACKAGE_NAME=\"Lemur\" -DPACKAGE_TARNAME=\"lemur\" -DPACKAGE_VERSION=\"4.12\" -DPACKAGE_STRING=\"Lemur\ 4.12\" -DPACKAGE_BUGREPORT=\"project@lemurproject.org\" -DHAVE_LIBM=1 -DHAVE_LIBPTHREAD=1 -DHAVE_LIBZ=1 -DHAVE_NAMESPACES= -DISNAN_IN_NAMESPACE_STD= -DSTDC_HEADERS=1 -DHAVE_SYS_TYPES_H=1 -DHAVE_SYS_STAT_H=1 -DHAVE_STDLIB_H=1 -DHAVE_STRING_H=1 -DHAVE_MEMORY_H=1 -DHAVE_STRINGS_H=1 -DHAVE_INTTYPES_H=1 -DHAVE_STDINT_H=1 -DHAVE_UNISTD_H=1 -D_FILE_OFFSET_BITS=64 -DHAVE_FSEEKO=1 -DHAVE_MKSTEMP=1 -DHAVE_MKSTEMPS=1 -DHAVE_EXT_ATOMICITY_H=1 -DP_NEEDS_GNU_CXX_NAMESPACE=1 -DNDEBUG=1 -g -O3  -I$(LEMUR_INC)
CXXFLAGS  = -DPACKAGE_NAME=\"Lemur\" -DPACKAGE_TARNAME=\"lemur\" -DPACKAGE_VERSION=\"4.12\" -DPACKAGE_STRING=\"Lemur\ 4.12\" -DPACKAGE_BUGREPORT=\"project@lemurproject.org\" -DHAVE_LIBM=1 -DHAVE_LIBPTHREAD=1 -DHAVE_LIBZ=1 -DHAVE_NAMESPACES= -DISNAN_IN_NAMESPACE_STD= -DSTDC_HEADERS=1 -DHAVE_SYS_TYPES_H=1 -DHAVE_SYS_STAT_H=1 -DHAVE_STDLIB_H=1 -DHAVE_STRING_H=1 -DHAVE_MEMORY_H=1 -DHAVE_STRINGS_H=1 -DHAVE_INTTYPES_H=1 -DHAVE_STDINT_H=1 -DHAVE_UNISTD_H=1 -D_FILE_OFFSET_BITS=64 -DHAVE_FSEEKO=1 -DHAVE_MKSTEMP=1 -DHAVE_MKSTEMPS=1 -DHAVE_EXT_ATOMICITY_H=1 -DP_NEEDS_GNU_CXX_NAMESPACE=1 -DNDEBUG=1 -g -O3 -I$(LEMUR_INC) -I$(LEMON_INC)


CPPLDFLAGS  =  -L$(LEMUR_LIBPATH) -l$(LEMUR_LIB) -lz -lpthread -lm -lsqlite3 -lglog
## specify your object files here
OBJS = NetworkIndexer.o RetrievalConcept.o
## specify your program here
PROG = network_indexer

all: $(PROG)

$(PROG): $(OBJS)
	$(CXX) $(CXXFLAGS) -g -o $@ $^ $(CPPLDFLAGS)

clean:
	rm -f $(PROG) $(OBJS)
